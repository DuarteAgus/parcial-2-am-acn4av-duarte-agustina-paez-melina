<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/tvTituloDashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Panel del cliente"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvEstadoPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado del plan"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloDashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDetallePlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstadoPlan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtituloDispositivos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dispositivos registrados para jugar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetallePlan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etDispositivo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej: TV del living, Notebook, Celular"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="#AAAAAA"
        android:background="#1F1B3A"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtituloDispositivos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAgregarDispositivo"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btnAgregarDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/etDispositivo"
        app:layout_constraintBottom_toBottomOf="@id/etDispositivo"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCatalogoOnline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver catÃ¡logo completo en la web"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAgregarDispositivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/svDispositivos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnCatalogoOnline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llDispositivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
