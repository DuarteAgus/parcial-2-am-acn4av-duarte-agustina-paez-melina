<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/tvTituloOrden"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmá tu plan"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvResumenPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloOrden"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMetodoPagoLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Método de pago"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvResumenPlan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/rgMetodoPago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMetodoPagoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarjeta de crédito/débito"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/rbAlias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alias / CBU"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/rbOtro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otro método"
            android:textColor="@android:color/white" />
    </RadioGroup>

    <EditText
        android:id="@+id/etAlias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Alias o número de tarjeta"
        android:inputType="text"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="#1F1B3A"
        android:textColor="@android:color/white"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/rgMetodoPago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnConfirmarPago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmar pago y contratar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etAlias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
